<?xml version="1.0" encoding="utf-8"?>
<selector  
    xmlns:android="http://schemas.android.com/apk/res/android">  
    <!-- pressed -->  
    <item android:state_pressed="true" >  
        <shape  android:shape="rectangle">  
                       
            <corners  
                android:radius="4dp" />  
        </shape>  
    </item>  
   <!-- focus -->  
   <item android:state_focused="true" >  
        <shape>  
                     
            <corners  
                android:radius="4dp" />  
        </shape>  
    </item>  
</selector>  